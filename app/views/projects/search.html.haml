- content_for :title, "Search Results"
= stylesheet_link_tag    "application", media: :all
= stylesheet_link_tag    "home", media: :all

.page-header
  %h1.top Search results


- if @projectsSearch.present? == false
  %p#searchMessage
    There are no projects containing the term(s)
    %span#searchMessageSpan #{params[:search]}
    !
- else
  -# Display projects that are related to search terms.
  - @projectsSearch.each do |project|
    %div.container.buffered-top
      - if project.subcategory.name == 'Economic'
        %div.panel.panel-success
          %div.panel-heading
            %p= project.subcategory.name
          %div.panel-body
            %table
              %tr
                %td.title Project category:
                %td= project.category.name
              %tr
                %td.title Project number:
                %td= project.project_number
              %tr
                %td.title Project title:
                %td= project.project_title
              %tr
                %td.title Aims:
                %td= project.aims
              %tr
                %td.title Would do project:
                %td= project.would_do_project
              %tr
                %td.showButton= link_to 'Show', project, class: "show-flash btn btn-default"

      - if project.subcategory.name == 'Technology'
        %div.panel.panel-danger
          %div.panel-heading
            %p= project.subcategory.name
          %div.panel-body
            %table
              %tr
                %td.title Project category:
                %td= project.category.name
              %tr
                %td.title Project number:
                %td= project.project_number
              %tr
                %td.title Project title:
                %td= project.project_title
              %tr
                %td.title Aims:
                %td= project.aims
              %tr
                %td.title Would do project:
                %td= project.would_do_project
              %tr
                %td.showButton= link_to 'Show', project, class: "show-flash btn btn-default"

      - if project.subcategory.name == 'Knowledge'
        %div.panel.panel-info
          %div.panel-heading
            %p= project.subcategory.name
          %div.panel-body
            %table
              %tr
                %td.title Project category:
                %td= project.category.name
              %tr
                %td.title Project number:
                %td= project.project_number
              %tr
                %td.title Project title:
                %td= project.project_title
              %tr
                %td.title Aims:
                %td= project.aims
              %tr
                %td.title Would do project:
                %td= project.would_do_project
              %tr
                %td.showButton= link_to 'Show', project, class: "show-flash btn btn-default"
