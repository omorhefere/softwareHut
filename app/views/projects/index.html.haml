          = link_to 'Buried Infrastructure Performance', :bip

%div.container.buffered-top
  %div.panel.panel-success
    %div.panel-heading
      %p CATEGORY
    %table.table.table-striped
      %tr
        %td Project number
        %td Project title
        %td Aims
        %td Would do project
        %td
        %td
        %td
      %tr
        - @projects.each do |project|
          %td= project.project_number
          %td= project.project_title
          %td= project.aims
          %td= project.would_do_project
          %td= link_to 'Show', project
          %td= link_to 'Edit', edit_project_path(project)
          %td= link_to 'Destroy', project, :method => :delete, :data => { :confirm => 'Are you sure?' }


