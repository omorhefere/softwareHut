.page-header
  %h1 Sheffield Water Centre
  %h1 Listing projects

%div.categories_box.panel.panel-primary
  %ul.nav
    %li
    %li.dropdown
      %a.hidden-md.hidden-sm.hidden-xs.glyphicon.glyphicon-filter.dropdown-toggle{:href => "#", "role" => "button", "data-toggle" => "dropdown", "data-target" => "#"}
