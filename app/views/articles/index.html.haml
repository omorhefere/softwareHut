-  content_for :title, "Recent News"
= stylesheet_link_tag    "application", media: :all
= stylesheet_link_tag    "News", media: :all
%h1 Recent News

- @articles.each do |article|
    .col-xs-12.col-sm-6.col-md-8
        %h3= article.title
        %p= article.created_at
        .thumbnail
            =image_tag article.avatar.url(:medium)
            .caption
                %p= article.text
