- content_for :title, "Forgot Password"
= stylesheet_link_tag    "application", media: :all
= stylesheet_link_tag  "log_in_out", media: :all

-# Stops the nav bar from showing on page.
- @disabled_nav = true
-# Keeps the footer at the bottom of the page.
- @sticky_footer=true

.page-header
  %h1 Sheffield Water Centre

%div.container.buffered-top
#centre the form
  .row
    .col-sm-6.col-sm-offset-3.col-lg-4.col-lg-offset-4
      .panel.panel-default.margin-top-20
        .panel-heading
          %h2.panel-title Forgot Password
        = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
          = f.error_notification
          .form-inputs
          = f.input :email, autofocus: true, required: true, placeholder: "Email", label:false
          .form-actions
            = f.button :submit, "Send me reset password instructions", class: "show-flash"
