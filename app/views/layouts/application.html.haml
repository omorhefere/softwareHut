!!!
%html
  %head
    %title SWC - #{content_for(:title)}
    %meta{ name: "viewport", content: "width=device-width, initial-scale=1.0" }
    %meta{ :'http-equiv' => 'X-UA-Compatible', content: 'IE=edge' }
    = stylesheet_link_tag    "application", media: :all
    = javascript_include_tag "application"
    = favicon_link_tag '/favicon.ico'
    = csrf_meta_tags

  %body{ class: environment_notice_body_class }
    = render 'layouts/environment_notice'
    .flash-messages
      - flash.each do |name, msg|
        - next unless name == 'alert' || name == 'notice'
        .alert.fade.in
          .container
            - if name == 'notice'
              = fa_icon('check', class: 'flash-success')
            - else
              = fa_icon('warning', class: 'flash-error')
              = msg
              %a{ href: '#', title: 'Hide this message', data: { dismiss: :alert } } Dismiss


      %noscript
        .warning-page-cover
          .alert.alert-info
            %h2 Sorry, it appears that you are using a web browser without JavaScript which prevents us offering you a rich online experience.
            %p Please enable JavaScript or use a different web browser, or alternatively contact the CiCS Helpdesk for assistance.

      .wrap
        %nav#main-nav.navbar.navbar-default.navbar-fixed-top
          .container
            .navbar-header
              %button.navbar-toggle{ data: { target: ".navbar-collapse", toggle: :collapse, type: :button } }
                %span.icon-bar
              %img.img-responsive.hidden-xs#logo(src="/images/proto2.jpg")

            - if @disabled_nav!=true
              .collapse.navbar-collapse

                %form.navbar-form.navbar-right{role: "search"}
                  .form-group
                    %input.form-control{placeholder: "Search", type: "text"}/
                  %button.btn.button_search.btn-default{type: "submit"} Submit

                %ul.nav.navbar-nav.navbar-right

                  -# Home button
                  - if @current_nav_identifier==:home
                    = navbar_link_to :home, title: "Go to the home page", identifier: :home, :id => "navbuttonactive" do
                      Home
                  - else
                    = navbar_link_to :home, title: "Go to the home page", identifier: :home, :id => "navbutton" do
                      Home

                  -# Add project button
                  - if @current_nav_identifier==:add_new_project
                    = navbar_link_to :add_project, title: "Add new project", identifier: :add_new_project, :id => "navbuttonactive" do
                      Add New Project
                  - else
                    = navbar_link_to :add_project, title: "Add new project", identifier: :add_new_project, :id => "navbutton" do
                      Add New Project

                  -# Invite button
                  - if @current_nav_identifier==:admin
                    = navbar_link_to :admin, title: "Invite user", identifier: :admin, :id => "navbuttonactive" do
                      Invite
                  - else
                    = navbar_link_to :admin, title: "Invite user", identifier: :admin, :id => "navbutton" do
                      Invite

                  -# Contact button
                  - if @current_nav_identifier==:contact
                    = navbar_link_to :contact, title: "Contact", identifier: :contact, :id => "navbuttonactive" do
                      Contact
                  - else
                    = navbar_link_to :contact, title: "Contact", identifier: :contact, :id => "navbutton" do
                      Contact

                  -# Log out button
                  = navbar_link_to :log_in_out, title: "Log Out", identifier: :log_out, :id => "navbutton" do
                    Log Out


