- content_for :title, "Log In"
= stylesheet_link_tag    "admin", media: :all

%div.container.buffered-top

  .page-header
    %h1 Sheffield Water Centre

  %p.lead Invite new user

  .container#inputFields
    = simple_form_for :form_examples do |f|
      = f.input :admin_pass, as: :password, placeholder: "Password", label:false
      = f.input :email, placeholder: "Email", label:false

    %div#buttonInvite
      %button#show-flash.btn.btn-default{ type: :button}
        = link_to 'Invite user', :home
