= stylesheet_link_tag    "registration", media: :all
= stylesheet_link_tag    "application", media: :all



- content_for :title, "Join Sheffield Water Centre"
.container#header
  %h1#header Register Today.

.container#inputFields
  = simple_form_for :registration  do |f|
    = f.input :name, placeholder: "Full Name", label:false
    = f.input :email, placeholder: "Email", label:false
    = f.input :password, placeholder: "Password", label:false
    = f.button :submit, "Sign up", class: "btn btn-primary"
