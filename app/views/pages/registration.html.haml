- content_for :title, "Join Sheffield Water Centre"
= stylesheet_link_tag    "application", media: :all
= stylesheet_link_tag    "registration", media: :all

%div.container.buffered-top

  %p.lead Register Today

  .container#inputFields
    = simple_form_for :registration  do |f|
      = f.input :name, placeholder: "Full Name", label:false
      = f.input :email, placeholder: "Email", label:false
      = f.input :password, placeholder: "Password", label:false
      = f.input :password, placeholder: "Confirm Password", label:false

      %div#registerButton
        = link_to 'Register', :log_in_out, class: "show-flash btn btn-default"
