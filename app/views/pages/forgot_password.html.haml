- content_for :title, "Forgot Password"
= stylesheet_link_tag    "application", media: :all
= stylesheet_link_tag  "forgot_password", media: :all

%div.container.buffered-top

  .page-header
    %h1 Sheffield Water Centre

  %p.lead Reset Password

  .container#inputFields
    = simple_form_for :form_examples do |f|
      = f.input :email, placeholder: "Email", label:false

      %div#requestButton
        = button_to 'Request reset', :root,  class: "show-flash btn btn-default"
