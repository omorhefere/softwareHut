- content_for :title, "Join Sheffield Water Centre"
= stylesheet_link_tag    "registration", media: :all
= stylesheet_link_tag    "application", media: :all

%div.container.buffered-top

  .page-header
    %h1 Sheffield Water Centre


  %p.lead Register Today

  .container#inputFields
    = simple_form_for(@user) do |f|
      = f.error_notification

      .form-inputs
        = f.input :name
        = f.input :email
        = f.input :password
        = f.input :confirm_password

      .form-actions
        = f.button :submit

      
