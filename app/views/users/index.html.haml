= stylesheet_link_tag    "registration", media: :all
= stylesheet_link_tag    "application", media: :all
- @disabled_nav = true
- @sticky_footer= true

%h1#userList Listing users

%table.table
  %thead
    %tr
      %th Name
      %th E-mail
      %th
      %th
      %th

  %tbody
    - @users.each do |user|
      %tr
      %td= user.name
      %td= user.email
      %td= link_to 'Show', user,class: "show-flash btn btn-default"
      %td= link_to 'Edit', edit_user_path(user),class: "show-flash btn btn-default"
      %td= link_to 'Destroy', user, :method => :delete, :data => { :confirm => 'Are you sure?' },class: "show-flash btn btn-default"

%br

= link_to 'New User', :admin,class: "show-flash btn btn-default"
