-  content_for :title, "Contact"
= stylesheet_link_tag    "application", media: :all
= stylesheet_link_tag    "contact", media: :all


%div.container.buffered-top
  .container
  - flash.each do |name, msg|
    - if msg.is_a?(String)
      %div{:class => "alert alert-#{name == :notice ? "success" : "error"}"}
        %a.close{"data-dismiss" => "alert"}
          &times;
        = content_tag :div, msg, :id => "flash_#{name}"

.image
  %img.water{:alt => "Water", :src => " /images/proto2.jpg"}/
  %h1
    Contact Sheffield Water Centre
  .contact
    %iframe.google{  :allowfullscreen => "", :src => "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2379.837839425568!2d-1.481115784391262!3d53.38195087974513!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4879788020127157%3A0x31e00ebdb379d999!2sMappin+Building!5e0!3m2!1sen!2suk!4v1461515847313"}

    %table.table-responsive
      %tbody
      %tr
        %td Dr. Vanessa Speight
      %tr
        %td Research Fellow In Integrated Water Systems.
      %tr
        %td 0114 222 5750
      %tr
        %td v.speight@sheffield.ac.uk
      %tr
        %td Mappin Building, Mappin Street, Sheffield S1 3JD.
      .form
        = simple_form_for @contact do |f|
          .form-inputs
            .hidden
              = current_user.name
              = current_user.email
            = f.input :message, :as => :text, :required => true, placeholder: "Write Your Message Here", label:false,:input_html => {:rows => 5}
            .hidden
              = f.input :nickname, :hint => 'Leave this field blank!'
          %div
            = f.button :submit, 'Send message', :class=> "btn btn-primary"
